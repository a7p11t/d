" Display line number
set number

" Use spaces instead of tabs
set expandtab

" Set the width of a tab character to 4 spaces
set tabstop=4

" Automatically insert indentation according to language
set smartindent

" Set the number of spaces to insert with automatic indentation to 4
set shiftwidth=4

" Set the number of spaces to insert with the tab key to 4
set softtabstop=4

" Automatically indent new lines to match the previous line
set autoindent

